<%- include('includes/head') %>
<main class="w-full h-screen bg-gray-100 flex justify-center items-center">
    <form class="w-[370px] p-4 rounded-xl bg-white" action="/register" method="post">
        <input type="text" name="username" placeholder="Username" class="py-2 px-4 bg-gray-100 rounded-md w-full border mb-4">

        <input type="text" name="email" placeholder="Email" class="py-2 px-4 bg-gray-100 rounded-md w-full border mb-4">

        <input type="text" name="avatar" placeholder="Avatar" class="py-2 px-4 bg-gray-100 rounded-md w-full border mb-4">

        <input type="password" name="password" placeholder="Password" class="py-2 px-4 bg-gray-100 rounded-md w-full border mb-4">

        <input type="password" name="passwordConfirm" placeholder="Password confirm" class="py-2 px-4 bg-gray-100 rounded-md w-full border mb-4">

        <input type="submit" value="Бүртгэх" class="py-2 px-4 bg-indigo-500 text-white rounded-md w-full">
    </form>
</main>
